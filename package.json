{
  "name": "convue-lib",
  "private": true,
  "version": "0.0.1",
  "description": "A collection of front-end tools based on Vue3.0. Include utilities css, responsive Ant Design Vue components and other common component packaging and commonly used tools and methods.",
  "author": "ziping <575936902@qq.com>",
  "license": "MIT",
  "keywords": [
    "vue",
    "vue3",
    "ant",
    "design",
    "antd",
    "vueComponent",
    "component",
    "components",
    "ui",
    "framework",
    "frontend",
    "lib",
    "style",
    "helper",
    "utils",
    "tools"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ziping-li/convue-lib.git"
  },
  "scripts": {
    "dev": "vite --config ./build/doc.js",
    "build:docs": "vite build --config ./build/doc.js",
    "build": "node ./build/lib.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "eslint --ext .js,.tsx src/",
    "lint:fix": "yarn run lint --fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{vue,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "ant-design-vue": "^2.0.0-rc.9",
    "vue": "^3.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@vitejs/plugin-vue": "^1.1.2",
    "@vitejs/plugin-vue-jsx": "^1.0.2",
    "@vue/babel-plugin-jsx": "^1.0.2",
    "@vue/compiler-sfc": "^3.0.5",
    "@vuedx/typecheck": "^0.6.0",
    "@vuedx/typescript-plugin-vue": "^0.6.0",
    "ant-design-vue": "^2.0.0-rc.9",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "css-loader": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.5.0",
    "file-loader": "^6.0.0",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "lint-staged": "^10.5.4",
    "markdown-it-container": "^3.0.0",
    "mini-css-extract-plugin": "^0.11.2",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.0",
    "vite": "^2.0.0-beta.50",
    "vite-plugin-vuedoc": "3.0.5",
    "vue": "^3.0.5",
    "vue-loader": "^16.0.0-beta.7",
    "vue-router": "4",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0"
  }
}
